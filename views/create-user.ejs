<% include partials/header.ejs %>

        <div class="container">
            <form action="/create-user" method="POST">
                <div class="form-group row">
                    <h3>Create User</h3>
                </div>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="name">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="description" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="description">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">E-mail</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="email">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="bitcoinWalletId" class="col-sm-2 col-form-label">Bitcoin Address</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="bitcoinWalletId">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ethereumWalletId" class="col-sm-2 col-form-label">Ethereum Address</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="ethereumWalletId">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="maxAmountAllowed" class="col-sm-2 col-form-label">Max Amount Allowed</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="maxAmountAllowed">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>

    <script src="../js/createUser.js"></script>

<% include partials/footer.ejs %>